# Edge TTS MCP Configuration

# Default voice (run 'edge-tts --list-voices' to see all)
EDGE_TTS_VOICE=en-US-AriaNeural

# Speech rate: -50% to +100% (default: +0%)
EDGE_TTS_RATE=+0%

# Volume: -50% to +100% (default: +0%)
EDGE_TTS_VOLUME=+0%

# Pitch: -50Hz to +50Hz (default: +0Hz)
EDGE_TTS_PITCH=+0Hz

# Audio player: auto, ffplay, mpv, paplay (default: auto)
EDGE_TTS_PLAYER=auto

# Enable audio caching (default: true)
EDGE_TTS_CACHE_ENABLED=true

# Cache directory (default: ~/.cache/edge-tts-mcp)
EDGE_TTS_CACHE_DIR=

# Cache max size in MB (default: 100)
EDGE_TTS_CACHE_MAX_SIZE=100

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
EDGE_TTS_LOG_LEVEL=INFO
